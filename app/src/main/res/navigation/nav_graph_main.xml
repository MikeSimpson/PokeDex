<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph_main"
    app:startDestination="@id/pokemonMasterFragment">

    <fragment
        android:id="@+id/pokemonMasterFragment"
        android:name="nz.co.mikesimpson.pokedex.ui.pokemon.PokemonMasterFragment"
        android:label="PokeDex"
        tools:layout="@layout/pokemon_master_fragment">
        <action
            android:id="@+id/go_to_pokemon_detail"
            app:destination="@id/pokemonDetailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/pokemonDetailFragment"
        android:name="nz.co.mikesimpson.pokedex.ui.pokemon.PokemonDetailFragment"
        android:label="{name}"
        tools:layout="@layout/pokemon_detail_fragment">
        <argument
            android:name="name"
            app:argType="string"/>
    </fragment>
</navigation>